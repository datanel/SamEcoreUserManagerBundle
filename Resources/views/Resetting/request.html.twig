{% extends "::base.html.twig" %}

{% block root_breadcrumb %}{% endblock %}

{% block body %}
    <div id="security-login-form" class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"> {{ 'security.login.title'|trans({}, 'FOSUserBundle') }}</div>
            <div class="panel-body">
                {% if invalid_email is defined %}
                    <div class="error">{{ 'resetting.request.invalid_email'|trans({'%username%': invalid_email}, 'FOSUserBundle') }}</div>
                {% endif %}
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="email">{{ 'resetting.request.email'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="col-sm-8">
                            <input type="text" id="email" class="form-control" name="email" required="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-2">
                            <input class="btn btn-primary" id="_submit" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


