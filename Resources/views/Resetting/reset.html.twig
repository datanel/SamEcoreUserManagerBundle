{% extends "::base.html.twig" %}

{% block root_breadcrumb %}{% endblock %}

{% block body %}
<div id="security-login-form" class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">Génération d'un nouveau mot de passe</div>
            <div class="panel-body">
                {{ 'confirm_password.validation_rules'|trans({}, 'FOSUserBundle') }}
            </div>
            <div class="panel-body">
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-2">
                            <input class="btn btn-primary" id="_submit" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
                        </div>
                    </div>
                </form>
                <br/><br/>
                <a href="{{ path("fos_user_security_login") }}">Back to login</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
